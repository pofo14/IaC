// filepath: /workspaces/IaC/terraform/shared/backend.tf.example
# Example S3 backend configuration
terraform {
  backend "s3" {
    bucket         = "iac-terraform-state"
    key            = "${var.environment}/infrastructure/${var.node_name}/terraform.tfstate"
    region         = "us-east-1"
    encrypt        = true
    dynamodb_table = "terraform-state-lock"
  }
}

