# Example Environment Variables for Packer Builds
# Copy this file to .env and fill in your actual values
# Then run: source .env
# DO NOT commit .env to version control!

# ==== Production Environment - PVE1 ====
export PROXMOX_HOST="pve1"
export PROXMOX_API_URL="https://pve1.flopo.retropetro.net:8006/api2/json"
export PROXMOX_API_TOKEN_ID="terraform-user@pve!packer"
export PROXMOX_API_TOKEN_SECRET="44b38da7-828f-40c3-879f-1b4236d65124"
export TRUENAS_ROOT_PASSWORD="your-truenas-password"
export OPNSENSE_ROOT_PASSWORD="your-opnsense-password"
export DISK_STORAGE="zfs01"

# VM IDs - Production PVE1
export TRUENAS_VM_ID="9012"
export OPNSENSE_VM_ID="9013"
export UBUNTU_VM_ID="9014"

